<div class="row">
  <!-- Sidebar với bộ lọc -->
  <div class="col-lg-3 mb-4">
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Danh mục</h5>
      </div>
      <div class="card-body">
        <select
          class="form-select"
          onchange="if (this.value) window.location.href = this.value"
        >
          <option value="/products" <%= !query.category ? 'selected' : '' %>>Tất cả sản phẩm</option>
          <% if (categories && categories.length > 0) { %>
            <% categories.forEach(category => { %>
              <option
                value="/products?category=<%= category._id %>"
                <%= query && query.category === category._id.toString() ? 'selected' : '' %>
              >
                <%= category.name %>
              </option>
            <% }) %>
          <% } %>
        </select>
      </div>
    </div>

    <!-- Lọc theo thương hiệu -->
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Thương hiệu</h5>
      </div>
      <div class="card-body">
        <select
          class="form-select"
          onchange="if (this.value) window.location.href = this.value"
        >
          <option value="/products<%= query.category ? '?category=' + query.category : '' %>" <%= !query.brand ? 'selected' : '' %>>
            Tất cả thương hiệu
          </option>
          <% if (brands && brands.length > 0) { %>
            <% brands.forEach(brand => { %>
              <option
                value="/products?<%= query.category ? 'category=' + query.category + '&' : '' %>brand=<%= brand %>"
                <%= query && query.brand === brand ? 'selected' : '' %>
              >
                <%= brand %>
              </option>
            <% }) %>
          <% } %>
        </select>
      </div>
    </div>

    <!-- Lọc theo giá -->
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Khoảng giá</h5>
      </div>
      <div class="card-body">
        <form action="/products" method="GET">
          <% if (query.category) { %>
          <input type="hidden" name="category" value="<%= query.category %>" />
          <% } %> <% if (query.search) { %>
          <input type="hidden" name="search" value="<%= query.search %>" />
          <% } %> <% if (query.brand) { %>
          <input type="hidden" name="brand" value="<%= query.brand %>" />
          <% } %>
          <div class="mb-3">
            <label for="minPrice" class="form-label">Giá từ</label>
            <input
              type="number"
              class="form-control"
              id="minPrice"
              name="minPrice"
              value="<%= query.minPrice || '' %>"
              placeholder="VNĐ"
            />
          </div>
          <div class="mb-3">
            <label for="maxPrice" class="form-label">Đến</label>
            <input
              type="number"
              class="form-control"
              id="maxPrice"
              name="maxPrice"
              value="<%= query.maxPrice || '' %>"
              placeholder="VNĐ"
            />
          </div>
          <button type="submit" class="btn btn-primary w-100">Áp dụng</button>
        </form>
      </div>
    </div>

    <!-- Lọc khuyến mãi -->
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Ưu đãi</h5>
      </div>
      <div class="list-group list-group-flush">
        <a
          href="/products?discount=true<%= query.category ? '&category=' + query.category : '' %>"
          class="list-group-item list-group-item-action <%= query && query.discount === 'true' ? 'active' : '' %>"
        >
          Đang giảm giá
        </a>
        <a
          href="/products?featured=true<%= query.category ? '&category=' + query.category : '' %>"
          class="list-group-item list-group-item-action <%= query && query.featured === 'true' ? 'active' : '' %>"
        >
          Sản phẩm nổi bật
        </a>
      </div>
    </div>
  </div>

  <!-- Danh sách sản phẩm -->
  <div class="col-lg-9">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Sản phẩm</h2>
      <% if (query && query.search) { %>
      <p>Kết quả tìm kiếm cho: "<%= query.search %>"</p>
      <% } %>
    </div>

    <!-- Sắp xếp sản phẩm -->
    <div class="d-flex justify-content-between align-items-center mb-3">
      <p>
        Hiển thị <%= Math.min((currentPage - 1) * 12 + 1, totalProducts) %>-<%=
        Math.min(currentPage * 12, totalProducts) %> trong tổng số <%=
        totalProducts %> sản phẩm
      </p>
      <div class="dropdown">
        <button
          class="btn btn-outline-secondary dropdown-toggle"
          type="button"
          id="sortDropdown"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          Sắp xếp
        </button>
        <ul
          class="dropdown-menu dropdown-menu-end"
          aria-labelledby="sortDropdown"
        >
          <li>
            <a class="dropdown-item <%= query.sort === 'price_asc' ? 'active' : '' %>"
                href="/products?<%= new URLSearchParams({...query, sort: 'price_asc'}).toString() %>">Giá tăng dần</a>
          </li>
          <li>
            <a class="dropdown-item <%= query.sort === 'price_desc' ? 'active' : '' %>"
                href="/products?<%= new URLSearchParams({...query, sort: 'price_desc'}).toString() %>">Giá giảm dần</a>
          </li>
          <li>
            <a class="dropdown-item <%= query.sort === 'name_asc' ? 'active' : '' %>"
                href="/products?<%= new URLSearchParams({...query, sort: 'name_asc'}).toString() %>">Tên A-Z</a>
          </li>
          <li>
            <a class="dropdown-item <%= query.sort === 'name_desc' ? 'active' : '' %>"
                href="/products?<%= new URLSearchParams({...query, sort: 'name_desc'}).toString() %>">Tên Z-A</a>
          </li>
          <li>
            <a class="dropdown-item <%= !query.sort ? 'active' : '' %>"
                href="/products?<%= new URLSearchParams({...query, sort: undefined}).toString() %>">Mới nhất</a>
          </li>
        </ul>
      </div>
    </div>

    <% if (products && products.length > 0) { %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% products.forEach(product => { %>
      <div class="col">
        <div class="card h-100 d-flex flex-column">
          <!-- ẢNH -->
          <div class="position-relative d-flex justify-content-center align-items-center bg-white" style="height: 200px;">
            <img
              src="<%= product.imageURL %>"
              class="img-fluid"
              alt="<%= product.name %>"
              style="max-height: 180px; object-fit: contain;"
            />
            <% if (product.discountPercentage > 0) { %>
            <span class="badge bg-danger position-absolute top-0 end-0 mt-2 me-2">
              -<%= product.discountPercentage %>%
            </span>
            <% } %>
            <% if (product.featured) { %>
            <span class="badge bg-primary position-absolute top-0 start-0 mt-2 ms-2">
              Nổi bật
            </span>
            <% } %>
          </div>

          <!-- THÔNG TIN -->
          <div class="card-body d-flex flex-column">
            <h6 class="card-title mb-2 fw-semibold"><%= product.name %></h6>
            <p class="text-muted small mb-1"><%= product.brand %> | <%= product.category.name %></p>

            <% if (product.discountPercentage > 0) { %>
            <div class="text-muted text-decoration-line-through small">
              <%= formatPrice(product.basePrice) %>
            </div>
            <% } %>
            <div class="fw-bold text-danger mb-3">
              <%= formatPrice(product.price) %>
            </div>

            <!-- NÚT CHI TIẾT CĂN ĐÁY -->
            <div class="mt-auto">
              <a href="/products/<%= product._id %>" class="btn btn-primary w-100">Chi tiết</a>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>

    <!-- Pagination -->
    <% if (totalPages > 1) { %>
    <nav aria-label="Page navigation" class="mt-4">
      <ul class="pagination justify-content-center">
        <% if (currentPage > 1) { %>
        <li class="page-item">
          <a class="page-link" href="/products?page=<%= currentPage - 1 %>">Trước</a>
        </li>
        <% } %>
        
        <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
          <a class="page-link" href="/products?page=<%= i %>"><%= i %></a>
        </li>
        <% } %>
        
        <% if (currentPage < totalPages) { %>
        <li class="page-item">
          <a class="page-link" href="/products?page=<%= currentPage + 1 %>">Tiếp</a>
        </li>
        <% } %>
      </ul>
    </nav>
    <% } %>
    <% } else { %>
    <div class="text-center py-5">
      <h4>Không tìm thấy sản phẩm</h4>
      <p class="text-muted">Hãy thử tìm kiếm với từ khóa khác</p>
      <a href="/products" class="btn btn-primary">Xem tất cả sản phẩm</a>
    </div>
    <% } %>
  </div>
</div>