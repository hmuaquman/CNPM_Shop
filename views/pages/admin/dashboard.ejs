<div class="dashboard-container">
  <div class="row mb-4">
    <div class="col-12">
      <h2>Product Management</h2>
      <p class="text-muted">
        Manage your electronic products inventory and details.
      </p>
    </div>
  </div>

  <!-- Management Cards -->
  <div class="row g-4 mb-5">
    <!-- Add Product -->
    <div class="col-lg-3 col-md-6">
      <div
        class="card h-100 border-0 shadow-sm"
        style="background-color: #f8f9fa"
      >
        <div class="card-body text-center p-4">
          <div class="mb-3">
            <i
              class="fas fa-plus-circle"
              style="font-size: 3rem; color: #6c757d"
            ></i>
          </div>
          <h5 class="card-title">Add Product</h5>
          <p class="card-text text-muted">Create a new product listing</p>
          <p class="small text-muted">
            Add new electronic products to your inventory with detailed
            specifications.
          </p>
          <button class="btn btn-dark mt-3">Create New</button>
        </div>
      </div>
    </div>

    <!-- Delete Product -->
    <div class="col-lg-3 col-md-6">
      <div
        class="card h-100 border-0 shadow-sm"
        style="background-color: #fdf2f2"
      >
        <div class="card-body text-center p-4">
          <div class="mb-3">
            <i
              class="fas fa-trash-alt"
              style="font-size: 3rem; color: #dc3545"
            ></i>
          </div>
          <h5 class="card-title">Delete Product</h5>
          <p class="card-text text-muted">Remove products from inventory</p>
          <p class="small text-muted">
            Remove discontinued or out-of-stock products from your catalog.
          </p>
          <button class="btn btn-outline-secondary mt-3">
            Manage Deletions
          </button>
        </div>
      </div>
    </div>

    <!-- Edit Product -->
    <div class="col-lg-3 col-md-6">
      <div
        class="card h-100 border-0 shadow-sm"
        style="background-color: #f0f8ff"
      >
        <div class="card-body text-center p-4">
          <div class="mb-3">
            <i class="fas fa-edit" style="font-size: 3rem; color: #0066cc"></i>
          </div>
          <h5 class="card-title">Edit Product</h5>
          <p class="card-text text-muted">Update product information</p>
          <p class="small text-muted">
            Modify product details, specifications, and images as needed.
          </p>
          <button class="btn btn-outline-secondary mt-3">Edit Products</button>
        </div>
      </div>
    </div>

    <!-- Update Prices -->
    <div class="col-lg-3 col-md-6">
      <div
        class="card h-100 border-0 shadow-sm"
        style="background-color: #f0fff4"
      >
        <div class="card-body text-center p-4">
          <div class="mb-3">
            <i
              class="fas fa-chart-line"
              style="font-size: 3rem; color: #28a745"
            ></i>
          </div>
          <h5 class="card-title">Update Prices</h5>
          <p class="card-text text-muted">Manage product pricing</p>
          <p class="small text-muted">
            Update prices, discounts, and special offers for your products.
          </p>
          <button class="btn btn-outline-secondary mt-3">Adjust Pricing</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="row">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 pb-0">
          <h5 class="mb-1">Recent Activity</h5>
          <p class="text-muted small mb-0">Latest product management actions</p>
        </div>
        <div class="card-body">
          <!-- Activity Item 1 -->
          <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
            <div class="activity-icon me-3">
              <i class="fas fa-plus-circle text-success"></i>
            </div>
            <div class="flex-grow-1">
              <h6 class="mb-1">New product added</h6>
              <p class="text-muted small mb-0">Ultra HD Smart TV - 65"</p>
            </div>
            <span class="text-muted small">2 hours ago</span>
          </div>

          <!-- Activity Item 2 -->
          <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
            <div class="activity-icon me-3">
              <i class="fas fa-edit text-primary"></i>
            </div>
            <div class="flex-grow-1">
              <h6 class="mb-1">Product updated</h6>
              <p class="text-muted small mb-0">
                Wireless Noise-Cancelling Headphones
              </p>
            </div>
            <span class="text-muted small">Yesterday</span>
          </div>

          <!-- Placeholder for future activity -->
          <div class="text-center py-4">
            <div class="text-muted">
              <i
                class="fas fa-clock mb-2"
                style="font-size: 2rem; opacity: 0.3"
              ></i>
              <p class="small mb-0">Activate Windows</p>
              <p class="small text-muted">Go to Settings to activate Windows</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
