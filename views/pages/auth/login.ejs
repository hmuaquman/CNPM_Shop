<div class="card border-0 shadow-sm p-4">
  <div class="card-body p-0">
    <h3 class="mb-1">Đăng nhập</h3>
    <p class="text-muted small mb-4">Đăng nhập vào tài khoản Tech4U của bạn</p>

    <form action="/auth/login" method="POST">
      <div class="mb-3">
        <label for="usernameOrEmail" class="form-label"
          >Email hoặc Tên đăng nhập</label
        >
        <input
          type="text"
          class="form-control"
          id="usernameOrEmail"
          name="usernameOrEmail"
          placeholder="Email hoặc Tên đăng nhập"
          required
          autofocus
        />
      </div>

      <div class="mb-3">
        <div class="d-flex justify-content-between align-items-center">
          <label for="password" class="form-label">Mật khẩu</label>
          <a href="/auth/forgot-password" class="small text-primary"
            >Quên mật khẩu?</a
          >
        </div>
        <div class="input-group">
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="••••••••"
            required
          />
          <span class="input-group-text">
            <i
              class="fas fa-eye"
              id="togglePassword"
              style="cursor: pointer"
            ></i>
          </span>
        </div>
      </div>

      <div class="mb-3 form-check">
        <input
          type="checkbox"
          class="form-check-input"
          id="rememberMe"
          name="rememberMe"
        />
        <label class="form-check-label" for="rememberMe">
          Ghi nhớ đăng nhập trong 30 ngày
        </label>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-dark">Đăng nhập</button>
      </div>
    </form>

    <div class="mt-4 text-center">
      <p>
        Chưa có tài khoản?
        <a href="/auth/register" class="text-decoration-none">Đăng ký ngay</a>
      </p>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const togglePassword = document.querySelector("#togglePassword");
    const password = document.querySelector("#password");

    togglePassword.addEventListener("click", function () {
      const type =
        password.getAttribute("type") === "password" ? "text" : "password";
      password.setAttribute("type", type);
      this.classList.toggle("fa-eye");
      this.classList.toggle("fa-eye-slash");
    });
  });
</script>
